<% include ../partial/header %>
<div class="container">
   <div class="row">

     <h1 style="text-align:center">Create New Campground!</h1>
     <div style="width: 30%; margin:25px auto">
      <form action="/campground" method="POST">
          <div class="form-group">  
            <!--Make it a form group but have space-->
             <!--for the name blank-->
           <input class="form-control" type="text" name="name" placeholder="name"> 
          </div>
          <div class="form-group">  
             <!--for the price blank-->
           <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01"> 
          </div>
            <!--for the image blank-->
          <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url">
          </div>
          <!--for the description blank-->
          <div class="form-group">  
           <input class="form-control" type="text" name="description" placeholder="description">
          </div>
          <div class="form-group">
      <button class="btn btn-lg btn-primary btn-default btn-block">Submit!!!</button>
          </div>
      </form>
      <a href="/campground">Go Back</a>
      <div>
  
   </div>
</div>
<% include ../partial/footer %>